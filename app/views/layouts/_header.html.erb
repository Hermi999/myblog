  <h1 id="headline"><%= t("welcome.header.headline") %></h1>


  <div id="header_button_wrapper">
    <div id="button1" class="header_button">CONTACT</div>
    <div id="button2" class="header_button">RESUME</div>
  </div>

  <div id="scrollDown">
    <i class="fa fa-chevron-down fa-3x"></i>
  </div>

</header>
