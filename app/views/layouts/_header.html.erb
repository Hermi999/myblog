<header id="header">

  <nav class="navbar navbar-fixed-top navbar-inverse">
    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#headerNavbar">&#9776;</button>

    <a class="navbar-brand hidden-md-up" id="header_logo_link_mobile" href="#">
      <img src="/assets/logo_weiss_transparent.PNG">
    </a>

    <div class="collapse navbar-toggleable-sm" id="headerNavbar">
      <a class="navbar-brand hidden-sm-down" id="header_logo_link_desktop" href="#">
        <img src="/assets/logo_weiss_transparent.PNG">
      </a>

      <div class="nav navbar-nav pull-md-right">
        <%= link_to t("welcome.header.home"), '#', :class => "nav-item nav-link active menu_element" %>
        <%= link_to t("welcome.header.portfolio"), '#', :class => "nav-item nav-link menu_element" %>
        <%= link_to t("welcome.header.about"), '#', :class => "nav-item nav-link menu_element" %>
        <%= link_to t("welcome.header.resume"), '#', :class => "nav-item nav-link menu_element" %>
